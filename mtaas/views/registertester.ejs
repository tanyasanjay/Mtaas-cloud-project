	{
		alert("Password cannot be empty");
		return;
	}
    if (in_passwordd != in_cpasswordd)
	{
		alert("passwords do not match");
		return;
	}
                                        if (in_sex == null || in_sex == "")
	{
		alert("Please select your Sex");
		return;
	}
                                        if (in_projecttype == null || in_projecttype == "")
	{
		alert("Please select your Project Type");
		return;
	}
                                        if (in_experience == null || in_experience == "")
	{
		alert("Please enter your Experience");
		return;
	}
    
				
		$http({
			  method: 'POST',
			  url: '/signuptester',			  
			  data: {"firstname":in_firstname,"lastname":in_lastname,"email": in_email,"username":in_username,
			  "passwordd" : in_passwordd, "cpasswordd" : in_cpasswordd, "sex":in_sex,"projecttype":in_projecttype,"experience":in_experience}
			}).
			  then(function(response) {
				  $window.location.href = '/index';
			  });
			} 
			
}]);
