<script type ='text/javascript'>
	var app=angular.module('MtaaS', [])
	 app.controller('MtaaS1', ['$scope', '$http', '$window', function ( $scope,$http,$window)
	 {	
		$scope.addprojectdetails = function (){
				var in_projectname = $scope.projectname;
				var in_description = $scope.description;
				var in_requirement = $scope.requirement;
				var in_plan = $scope.plan;
				var in_addressline1= $scope.addressline1;
				var in_addressline2 = $scope.addressline2;
				var in_city = $scope.city;
				var in_postcode = $scope.postcode;
				var in_country = $scope.country;
				var in_state = $scope.state;
				var in_phone=$scope.phone;
				var in_developeremail=$scope.developeremail;
				
				if (in_projectname == null || in_projectname == "")
	{
		alert("Project Name cannot be empty");
		return;
	}

	
	
	if (in_description == null || in_description == "")
	{
		alert("Project Description cannot be empty");
		return;
	}
	if (in_requirement == null || in_requirement == "")
	{
		alert("Please enter your Project Requirement document link");
		return;
	}
	if (in_plan == null || in_plan == "")
	{
		alert("Please select your plan");
		return;
	}
	if (in_addressline1 == null || in_addressline1 == "")
	{
		alert("Address Line 1 cannot be empty");
		return;
	}
	if (in_addressline2 == null || in_addressline2 == "")
	{
		alert("Address Line 2 cannot be empty");
		return;
	}		
	if (in_city == null || in_addressline2 == "")
	{
		alert("City cannot be empty");
		return;
	}if (in_postcode == null || in_addressline2 == "")
	{
		alert("Postcode cannot be empty");
		return;
	}
	if (in_country == null || in_country == "")
	{
		alert("Country cannot be empty");
		return;
	}
	if (in_state == null || in_state == "")
	{
		alert("State cannot be empty");
		return;
	}
	if (in_phone == null || in_phone == "")
	{
		alert("Phone Number cannot be empty");
		return;
	}
	if (in_developeremail == null || in_developeremail == "")
	{
		alert("Email Id cannot be empty");
		return;
	}
		$http({
			  method: 'POST',
			  url: '/addprojectdetails',			  
			  data: {"projectname":in_projectname,"description": in_description,"requirement":in_requirement,
			  "plan" : in_plan, "addressline1" : in_addressline1, "addressline2":in_addressline2,"city":in_city,"postcode":in_postcode,
			   "country":in_country,"state":in_state,  "phone":in_phone, "developeremail" : in_developeremail}
			}).
			  then(function(response) {
				  $window.location.href = '/home';
			  });
			} 
		$http({
		 method: 'GET',
