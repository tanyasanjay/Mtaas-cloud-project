	<title>Tester Home Page</title>

	<style>
		
		html,
		body {
		  overflow-x: hidden;
		}
		body {
		  padding-top: 70px;
		}
		footer {
		  padding: 30px 0;
		}
		@media screen and (max-width: 767px) {
		  .row-offcanvas {
		    position: relative;
		    -webkit-transition: all .25s ease-out;
            -o-transition: all .25s ease-out;
            transition: all .25s ease-out;
		  }
		  .row-offcanvas-right {
		    right: 0;
		  }
		  .row-offcanvas-left {
		    left: 0;
		  }
		  .row-offcanvas-right
		  .sidebar-offcanvas {
		    right: -50%; /* 6 columns */
		  }
		  .row-offcanvas-left
		  .sidebar-offcanvas {
		    left: -50%; /* 6 columns */
		  }
		  .row-offcanvas-right.active {
		    right: 50%; /* 6 columns */
		  }
		  .row-offcanvas-left.active {
		    left: 50%; /* 6 columns */
		  }
		  .sidebar-offcanvas {
		    position: absolute;
		    top: 0;
		    width: 50%; /* 6 columns */
		  }
		}
         .body123{
        color:white;
        }
		.logoutLblPos{
			position:fixed;
		    right:10px;
		    top:5px;
		}
	</style>
</head>

 <body>
	<div ng-app="MtaaS" data-ng-controller="MtaaS1">
	<form name="mainform">		
	    <nav class="navbar navbar-fixed-top navbar-inverse">
	      <div class="container">
	        <div class="navbar-header">
	          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	            <span class="sr-only">Toggle navigation</span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </button>
	          <a class="navbar-brand" href="#" ng-click = "testerhome()">MTaaS Crowdsourcing</a>
	                    <form class="navbar-form navbar-right">
	          </form>
	        </div>
	        <div id="navbar" class="collapse navbar-collapse">
	          <ul class="nav navbar-nav">
	            <li><a href="#" ng-click="testerhome()">Home</a></li>
	            <li><a href="#" ng-click="testerprofile()">Profile</a></li>
	            <li><a href="#" ng-click="testerproject()">My Projects</a></li>
	            <li><a href="#" ng-click="testerdashboard()">Dashboard</a></li>
	            <li  class="active"><a href="#" ng-click="testerdefects()">Defects</a></li>
	            <li></li>
	          </ul>
	          <div class = "body123">
          
        
	          <label class="logoutLblPos"><h6><span id="time"></span>
	          <a type="submit" align="right" class="btn btn-success" ng-click="logoutsession()" role="button" >Logout</a>
	          </label> </h6></div>
	        </div><!-- /.nav-collapse -->
	      </div><!-- /.container -->
	    </nav><!-- /.navbar -->
	    <div class="container">
	      <div class="row row-offcanvas row-offcanvas-right">
	        <div class="col-xs-12 col-sm-12">
	          <p class="pull-right visible-xs">
	            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
	          </p>
	          <div class="jumbotron">
                  <h2> <font color="blue">Defects</font></h2>	
	          <table class="table">
	<thead>
			<tr>
				
				<th>Project Name</th>
				<th> Project Type</th>
				<th>Defect Description</th>
				<th>Steps to Reproduce </th>
				<th>Defect Priority</th>
				<th>Defect Severity</th>				
				<th>Developer Name</th>
			</tr>
			<tbody>
			<tr>				
				<td><input type = "text" class="form-control" placeholder= "Project Name" ng-model = "defectprojectname"></td>
				<td><Select class="form-control" placeholder="Select Project Type" name="defectprojecttype" ng-model="defectprojecttype">
				
							<option value="IOS">IOS</option>
							<option value="Android">Android</option>
				</select></td>
				<td><input type = "text" class="form-control" placeholder= "Description" ng-model = "defectdescription"></td>
				<td><input type = "text" class="form-control" placeholder= "Steps" ng-model = "defectsteps"></td>
				<td><Select class="form-control" placeholder="Select priority" name="defectpriority" ng-model="defectpriority">
				
							<option value="P1">P1</option>
							<option value="P2">P2</option>
							<option value="P3">P3</option>
							<option value="P4">P4</option>
							</select></td>
				<td><Select class="form-control" placeholder="Select priority" name="defectseverity" ng-model="defectseverity">
				
							<option value="T1">T1</option>
							<option value="T2">T2</option>
							<option value="T3">T3</option>
							<option value="T4">T4</option>
							</select></td>
				<td><input type = "text" class="form-control" placeholder= "Developer username" ng-model = "defectdeveloper"></td>
				<td><button class="btn btn-primary" ng-click="raisedefect()">Raise Defect</button>
				</tbody>
		</thead>
	</table>    
	 <div class="panel-body">
	                            <div class="dataTable_wrapper">
	                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
	                                    <thead>
	                                        <tr>
	                                            <th>Defect ID</th>
	                                            <th>Project Name</th>
	                                            <th>Project Type</th>
	                                            <th>Defect Description Email</th>
	                                            <th>Defect Steps</th>
	                                            <th>Defect Priority</th>
	                                            <th>Defect Severity</th>
	                                        </tr>
	                                    </thead>
	                                    <tbody>
										<tr ng-repeat="d in defects| filter: search" class="even gradeC">
	                                            <td>{{d.defect_id}}</td>
	                                            <td>{{d.defectprojectname}}</td>
	                                            <td>{{d.defectprojecttype}}</td>
	                                            <td>{{d.defectdescription}}</td>
	                                            <td>{{d.defectsteps}}</td>
	                                            <td>{{d.defectpriority}}</td>
	                                            <td>{{d.defectseverity}}</td>
	                                    </tr>
	                                    </tbody>
	                                </table>
	                            </div>                      
	          	      
	              </div>
                 <h2><font color="blue">Comments</font></h2>
                <font color="red"><h5>(Please enter your comment here to reply to the respective developers comment below)</font></h5>
                  <div class="form-group col-md-12">
				<input class="form-control" name="comment_tester" ng-model="comment_tester" placeholder="Defect Comment" type="text">
						  </div>
                  <font color="red"><h5>(Please find yours and Developers comment below)</font></h5>
                   <div class="panel-body">
	                            <div class="dataTable_wrapper">
	                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
	                                    <thead>
	                                        <tr>
	                                            <th>Defect ID</th>
	                                            <th>Tester Name</th>
	                                            <th>Project Name</th>
	                                            <th>Developer Name</th>
	                                            <th>Developer Comment</th>
	                                            <th>Tester Comment</th>
	                                            
	                                        </tr>
	                                    </thead>
	                                    <tbody>
										<tr ng-repeat="dc in developercomments| filter: search" class="even gradeC">
	                                            <td>{{dc.comment_Defect_id}}</td>
	                                            <td>{{dc.comment_defect_tester}}</td>
	                                            <td>{{dc.comment_projectname}}</td>
	                                            <td>{{dc.comment_developer_name}}</td>
	                                            <td><font color ="darkcyan">{{dc.comment_developer}}</font></td>
	                                            <td>{{dc.comment_tester}}</td>
                                            <td><button type="button"  ng-click="commenttester(dc)" class="btn btn-primary " >Comment</button></td>
	                                            
	                                    </tr>
	                                    </tbody>
	                                </table>                                   
                                     </div>                      	          	      
                                </div>
	        </div><!--/.col-xs-12.col-sm-9-->
	      </div><!--/row-->	
	    </div><!--/.container-->

  <script>
	   var app=angular.module('MtaaS', []);
	 app.controller('MtaaS1', ['$scope', '$http', '$window', function ( $scope,$http,$window)
	 {
	 $scope.raisedefect = function (){
				
				var in_defectprojectname = $scope.defectprojectname;
				var in_defectprojecttype = $scope.defectprojecttype;
				var in_defectdescription = $scope.defectdescription;
				var in_defectsteps = $scope.defectsteps;
				var in_defectpriority = $scope.defectpriority;
				var in_defectseverity = $scope.defectseverity;		
				var in_defectdeveloper = $scope.defectdeveloper;	
		$http({
			  method: 'POST',
			  url: '/raisedefect',			  
			  data: {"defectprojectname":in_defectprojectname,"defectprojecttype":in_defectprojecttype,"defectdescription": in_defectdescription,"defectsteps":in_defectsteps,
			  "defectpriority" : in_defectpriority, "defectseverity" : in_defectseverity, "defectdeveloper" : in_defectdeveloper}
			}).
			  then(function(response) {
				  $window.location.href = '/testerdefects';
			  });
			} 
			
			$scope.fetchdefects = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/fetchdefects',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.defects= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING DEFECTS");
	   		        });
	   		    };
	   		    $scope.fetchdefects();

   		$http({
			 method: 'GET',
			 url: '/checklogin'
			 }).
			 then(function(response)
			 {
			 	if(response.data.status===300)
			 	{
			 	$window.location.href='/';
			 	}
			 });
		$scope.logoutsession= function () 
			{
				 $http({
				 method: 'GET',
				 url: '/logoutsession'
				 }).
				then(function(response)
				 {
				 	if(response.data.status===300)
				 	{
				 	console.log("destroy session");
				 	}else
				 	{
				 	$window.location.href='/';
				 	}
				 });
			 }  
        $scope.fetchtestercomments = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/fetchtestercomments',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.developercomments= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING DEFECTS");
	   		        });
	   		    };
	   		    $scope.fetchtestercomments();
         
         
         $scope.commenttester=function(dc){
             var in_comment_tester=$scope.comment_tester;
             
             if (in_comment_tester == null || in_comment_tester == "")
	{
		alert("Please enter your comment on the defect");
		return;
	}
         $http({
			method:'POST',
		    url:'/commenttester',
		    data:{"comment_defect_id": dc.comment_Defect_id,"comment_defect_tester":dc.comment_defect_tester, "comment_projectname":                              dc.comment_projectname, "comment_developer" :                                                                                                           dc.comment_developer,"comment_developer_name":dc.comment_developer_name,"comment_tester":in_comment_tester}
            }).success(function(response)
                       {
              $window.location.href = '/testerdefects';
             alert("Comment is made and will be notified to developer");				
        });
        };
                               
                               
                               
                               
		 		   
						  $scope.searchproject = function (){
						   $window.location.href = '/searchproject';
						}
						
						 $scope.testerprofile = function (){
						   $window.location.href = '/testerprofile';
						}
						$scope.testerproject = function (){
						   $window.location.href = '/testerproject';
						}
						$scope.testerdashboard = function (){
						   $window.location.href = '/testerdashboard';
						}
						$scope.testerhome = function (){
						   $window.location.href = '/testerhome';
						}
}]);

		</script>
         <script>
                var today = new Date();
                document.getElementById('time').innerHTML=today;
            </script>
	</body>
</html>

