    <script >
    var app=angular.module('MtaaS', [])
 app.controller('MtaaS', ['$scope', '$http', '$window', function( $scope,$http,$window)
 {
 $http({
				 method: 'GET',
				 url: '/checklogin'
				 }).
				 then(function(response)
				 {
				if(response.data.status===200)
			 	 {
			 	 $window.location.href='/home1';
			 	 }
				 });
 
 $scope.counttesters = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/counttesters',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.testerscount= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING PENDING CUSTOMER REQUEST");
	   		        });
	   		    }; 
	   		 $scope.counttesters();
	   		 
	   		  $scope.countdevelopers = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/countdevelopers',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.developerscount= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING PENDING CUSTOMER REQUEST");
	   		        });
	   		    }; 
	   		 $scope.countdevelopers();
	   		 
	   		   $scope.countprojects = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/countprojects',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.projectscount= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING PENDING CUSTOMER REQUEST");
	   		        });
	   		    }; 
	   		 $scope.countprojects();
         
			 
		$scope.registerdeveloper = function ()
		{
	   $window.location.href = '/registerdeveloper';
		}
		$scope.login = function ()
		{
	   $window.location.href = '/login';
		}
		$scope.registertester = function ()
		{
	   $window.location.href = '/registertester';
		}
		$scope.testerlogin = function ()
		{
