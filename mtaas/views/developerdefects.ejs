  <script>
	   var app=angular.module('MtaaS', []);
	 app.controller('MtaaS1', ['$scope', '$http', '$window', function ( $scope,$http,$window)
	 {
	 
			$scope.fecthdefectsdevelopers = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/fecthdefectsdevelopers',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.defectsdeveloper= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING DEFECTS");
	   		        });
	   		    };
	   		    $scope.fecthdefectsdevelopers();

   		$http({
			 method: 'GET',
			 url: '/checklogin'
			 }).
			 then(function(response)
			 {
			 	if(response.data.status===300)
			 	{
			 	$window.location.href='/';
			 	}
			 });
		$scope.logoutsession= function () 
			{
				 $http({
				 method: 'GET',
				 url: '/logoutsession'
				 }).
				then(function(response)
				 {
				 	if(response.data.status===300)
				 	{
				 	console.log("destroy session");
				 	}else
				 	{
				 	$window.location.href='/';
				 	}
				 });
			 }  
        
        $scope.comment=function(d){
             var in_comment_developer=$scope.comment_developer;
             
             if (in_comment_developer == null || in_comment_developer == "")
	{
		alert("Please enter your comment on the defect");
		return;
	}
		$http({
			method:'POST',
		    url:'/comment',
		    data:{"defect_id": d.defect_id, "defectprojectname": d.defectprojectname, "defect_tester" : d.defect_tester,"comment_developer":in_comment_developer}
            }).success(function(response){
              $window.location.href = '/developerdefects';
             alert("Comment is made and will be notified to tester");				
        });
        };
         
         $scope.fetchdevelopercomments = function() {
	   		    	$http({
	   		            method: 'GET',
	   		            url: '/fetchdevelopercomments',
	   		            }).success(function(response){
	   		           		//alert(JSON.stringify(response));
	   		           		$scope.developercomments= JSON.parse(response.result);
	   		        }).error(function(error){
	   		            alert("ERROR VIEWING DEFECTS");
	   		        });
	   		    };
	   		    $scope.fetchdevelopercomments();
         
		 		   
							   $scope.home = function (){
					   $window.location.href = '/home';
						}
						
						 $scope.developerprofile = function (){
						   $window.location.href = '/developerprofile';
						}
						$scope.developerproject = function (){
						   $window.location.href = '/developerproject';
						}
						$scope.developerdashboard = function (){
						   $window.location.href = '/developerdashboard';
						}
						$scope.developerdefects = function (){
						   $window.location.href = '/developerdefects';
						}
                        $scope.billing = function (){
						   $window.location.href = '/billing';
						}
}]);

		</script>
